{
    "compilerOptions": {
        "target": "ESNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "migrations/*.js"
    ],
    "typeAcquisition": {
        "enable": true
    }
}